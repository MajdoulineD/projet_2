@{
    ViewBag.Title = "Inscription";
}
@model projet_2.Models.Client


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script src="~/Assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/css_modifie_1.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h3 style="text-align:center" class="text-info"> Inscrivez-vous</h3>
                    @using(Ajax.BeginForm("Inscription", "Login", new AjaxOptions { HttpMethod="POST",UpdateTargetId="divTest",InsertionMode=InsertionMode.Replace,}, new { @class = "form-horizontal" }))
                    { 
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nom, "Nom :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", required = "required", placeholder = "Entrez votre nom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Prenom, "Prenom :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", required = "required", placeholder = "Entrez votre prenom" })
                            </div>
                        </div>
                         <div class="form-group">
                            @Html.LabelFor(model => model.login, "Login :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.login, new { @class = "form-control", required = "required", placeholder = "Entrez votre login", onchange = "$(this.form).submit();" })
                            </div>
                             
                            <h5 class="text-danger">@ViewBag.logExist</h5>   
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MotPasse, "Mot de passe :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.MotPasse, new { @class = "form-control", required = "required", placeholder = "Entrez votre mot de passe", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.retap_mdp, "Ressaisir le mot de passe :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.retap_mdp, new { @class = "form-control", required = "required", placeholder = "Ressaisissez votre mot de passe", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", placeholder = "Entrez votre email" })
                            </div>
                        </div>
                         <div class="form-group">
                            @Html.LabelFor(model => model.Ville, "Ville :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Ville, new { @class = "form-control", required = "required", placeholder = "Entrez votre ville" })
                            </div>
                        </div>                   
                         <div class="form-group">
                            @Html.LabelFor(model => model.tel, "Telephone :", new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.tel, new { @class = "form-control", required = "required", placeholder = "Entrez votre telephone" })
                            </div>
                        </div>

    <button type="submit" class="btn btn-info btn-block" name="submitform" value="submitform"> S'inscrire</button>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
   
                    }
                <div id="divTest"></div>

            </div>
            <div class="col-md-3"></div>

        </div>

    </div>
</body>
</html>
