@{
    ViewBag.Title = "Index";
}
@model projet_2.Models.Client
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script src="~/Assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/css_modifie_1.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="text-primary" style="text-align: center;">Bienvenu</h1><br>
                <div class="alert alert-dismissible alert-success" style="@ViewBag.style">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong> Vous avez réussi votre inscription!</strong> Vous pouvez maintenant vous connecter
                </div>
                <h3 style="text-align:center">Identifiez-vous </h3>
                <br />
                @using (Html.BeginForm("FormTraitement", "Login"))
                {
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(model => model.login, new { @class = "form-control", placeholder = "Login", required = "required" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.TextBoxFor(model => model.MotPasse, new { @class = "form-control", type = "password", placeholder = "Mot de passe", required = "required" })
                        <br /><br /><br />
                    </div>
                     <button class="btn btn-primary btn-block" type="submit"> Se connecter</button>
                }
                <h4 class="text-danger">@ViewBag.Warning</h4>
                <br />
                <a href="~/Login/InscriptionForm" class="btn btn-link">Inscription !</a>
                
            </div>
            <div class="col-sm-3"></div>  
        </div>

    </div>
</body>
</html>
